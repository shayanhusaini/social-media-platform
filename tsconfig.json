{
   "compilerOptions": {
     "skipLibCheck": true,
      "lib": [
         "es5",
         "es6"
      ],
      "esModuleInterop": true,
      "target": "es5",
      "noImplicitAny": false,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
   },
   "include": [
     "src/**/*"
   ]
}